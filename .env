# dotfile debug
if [ -n "$DOTFILE_DEBUG" ]; then
    echo "Loading ~/.env"
fi

# Local binaries
export PATH=$PATH:~/local/bin

# Local environment variables
if [ -f ~/local/.env ]; then
    source ~/.env.local
fi

# Go
export GOPATH=$HOME/.local/go
export PATH=$PATH:$GOPATH/bin

# Rancher Desktop
export PATH=$PATH:~/.rd/bin

# Python PIP
export PIP_TARGET=$HOME/.local/pip
export PATH=$PATH:$PIP_TARGET/bin
export PYTHONPATH=$PIP_TARGET

export PIP_DOWNLOAD_CACHE=$HOME/.pip/cache
export PIP_LOG_FILE=$HOME/.pip/pip.log
export PIP_BUILD=$HOME/.pip/build

# AWS
export AWS_PAGER=""
export AWS_DEFAULT_OUTPUT="yaml"

# DotNET
export PATH=$PATH:~/.dotnet/tools
export DOTNET_ROOT=/opt/local/share/dotnet

# GCP
export PATH=$PATH:/opt/local/libexec/google-cloud-sdk

# Rancher Desktop
export PATH=$PATH:$HOME/.rd/bin

# Java
export JAVA_HOME=/Library/Java/JavaVirtualMachines/openjdk17-temurin/Contents/Home
export PATH=$JAVA_HOME/bin:$PATH

# Homebrew
export HOMEBREW_PREFIX="/opt/homebrew";
export HOMEBREW_CELLAR="/opt/homebrew/Cellar";
export HOMEBREW_REPOSITORY="/opt/homebrew";
export PATH="/opt/homebrew/bin:/opt/homebrew/sbin${PATH+:$PATH}";
export MANPATH="/opt/homebrew/share/man${MANPATH+:$MANPATH}:";
export INFOPATH="/opt/homebrew/share/info:${INFOPATH:-}";