[core]
  editor = code --wait
  excludesfile = ~/.config/git/ignore

[include]
    path = ~/.local/config/git/config
	
[init]
	defaultBranch = maaster

[push]
	default = current # only push current branch
	autoSetupRemote = true

[pull]
	rebase = true # Rebasing is similar to asking Git, “Can you just add my new stuff on top of the stuff that has already been done?”
	autoStash = true # automatically stashes your uncommitted changes before starting a rebase and then reapplies them after the rebase is complete
	#ff = only # A fast-forward works the other way. It computes the difference and between the parent and current state, then applies that at the end.

[fetch]
	prune = true # remove remote branches that no longer exist on the remote

[rebase]
	autoStash = true

[diff]
  tool = vscode

[difftool "vscode"]
  cmd = code --wait --diff $LOCAL $REMOTE

[merge]
  tool = vscode

[mergetool "vscode"]
  cmd = code --wait $MERGED

[credential "https://github.com"]
	helper = 
	helper = !gh auth git-credential

[credential "https://gist.github.com"]
	helper = 
	helper = !gh auth git-credentialc

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
